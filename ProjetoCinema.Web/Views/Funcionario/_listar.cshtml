@model IEnumerable<Funcionario>

@{
    Layout = null;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Salario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { 
            <tr>
                <th scope="row">@item.Id</th>
                <th scope="row">@item.Nome</th>
                <th scope="row">@item.Salario</th>
                <td>
          <button type="button" class="btn btn-sm btn-primary" onclick="funcionario.viewEditar(@item.Id)">
            Editar
          </button>
          <button type="button" class="btn btn-sm btn-danger" onclick="funcionario.excluir(@item.Id)">
            Excluir
          </button>
            </tr>
        }
    </tbody>
</table>
